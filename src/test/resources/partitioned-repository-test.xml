<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:elasticsearch="http://www.springframework.org/schema/data/elasticsearch"
       xsi:schemaLocation="http://www.springframework.org/schema/data/elasticsearch http://www.springframework.org/schema/data/elasticsearch/spring-elasticsearch-1.0.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <import resource="infrastructure.xml"/>

    <bean name="elasticsearchPartitionsCache"
          class="org.springframework.data.elasticsearch.core.partition.DefaultElasticsearchPartitionsCache">
        <constructor-arg name="client" ref="client"/>
        <property name="elasticsearchOperations" ref="elasticsearchTemplate"/>
    </bean>
            

    <bean name="elasticsearchPartitioner"
          class="org.springframework.data.elasticsearch.core.partition.DefaultElasticsearchPartitioner">
        <property name="elasticsearchPartitionsCache" ref="elasticsearchPartitionsCache"/>
        <property name="elasticsearchOperations" ref="elasticsearchTemplate"/>
    </bean>

    <bean name="elasticsearchTemplate"
          class="org.springframework.data.elasticsearch.core.ElasticsearchTemplate">
        <constructor-arg name="client" ref="client"/>
        <property name="elasticsearchPartitioner" ref="elasticsearchPartitioner"/>
    </bean>

    <bean name="partitionSize" class="java.lang.String">
        <constructor-arg value="1000000"/>
    </bean>

    <elasticsearch:repositories
            base-package="org.springframework.data.elasticsearch.repositories.partition"/>

</beans>